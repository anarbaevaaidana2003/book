generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Book {
  id          Int      @id @default(autoincrement())
  title       String
  author      String
  frequencies CharFrequency[]
}

model CharFrequency {
  id        Int    @id @default(autoincrement())
  char      String
  frequency Int
  bookId    Int
  part      String @default("начало") // Set default value for 'part'
  book      Book   @relation(fields: [bookId], references: [id])
}
